
page,.page {
  height: 100%;
  width: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: rgb(240, 240, 250);
}

.page{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sureBtn{
  margin-left: 40rpx;
  margin-top: 100rpx;
  margin-right: 40rpx;
  margin-bottom: 100rpx;
}


/* 重启界面 */
.reboot{
  width: 100%;
  height: auto;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.reboot-content{
  width: 92%;
  height: auto;
  
  border-radius: 12rpx;
  border-bottom: 1rpx solid #ddd;
  margin-top: 40rpx;
  background-color: #fff;
}

.reboot-title{
  width: 92%;
  height: 90rpx;

  font-size: 36rpx;
  font-weight: 500;

  margin-top: 25rpx;
  margin-left: 4%;
  
  display: flex;
  flex-direction: column;
  justify-content: center;

  border-bottom: 1rpx solid #ddd ;

  padding: 0;
}

.reboot-tip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  margin-top: 100rpx;

}

.reboot-tip image{
  width: 70rpx;
  height: 70rpx;
}

.reboot-tip view{
  margin-left: 30rpx;
}

.bindtap{
  opacity: 0.6;
  background: #f7f7f7;
}
