page,.page {
  height: 100%;
  width: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: rgb(240, 240, 250);
}

.page{
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 继电器映射界面 */
.map-content{
  width: 96%;
  height: auto;

  display: flex;
  flex-direction: column;
  justify-content: center;

  border-radius: 12rpx;
  border: 2rpx solid #ddd;
  background-color: #fff;

  margin-top: 15rpx;
  z-index: 1;
}

.map-title{
  width: 96%;
  font-size: 40rpx;
  font-weight: 500;
  margin-top: 25rpx;
  margin-left: 4%;
}

.picker{
  width: 92%;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: 4%;
  border-bottom: 1rpx solid #ddd;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
}

.arrow{
  width: 15rpx;
  height: 15rpx;
  border: 2rpx solid #888;
  border-bottom: none;
  border-left: none;
  transform: rotate(135deg);
}

.picker-tab{
  width: 96%;
}

.map-inputList{
  width: 92%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;

  margin-top: 20rpx;
  margin-left: 4%;
  color: #555;

}

.map-row{
  width: 100%;
  height: 100rpx;

  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.row-left,.row-right{
  width: 45%;
  height: 100%;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.row-right{
  margin-left: 10%;
}

.row-left input,.row-right input{
  border-bottom:1rpx solid #ddd;
  margin-top: 10rpx;
}

.sureBtn{
  margin-left: 40rpx;
  margin-top: 100rpx;
  margin-right: 40rpx;
  margin-bottom: 100rpx;
}

.maped-list{
  width: 98%;
  height: auto;
  display: flex;
  flex-direction: row;

  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  margin-bottom: 100rpx;
}

.tab{
  width: 10%;
  height: 60rpx;
  background-color: rgb(26, 160, 52) ;
  margin-top: 20rpx;
  margin-left: 4%;
  border: 1rpx solid #000;
  text-align: center;
  display: flex;
  flex-direction: column;

  justify-content: center;
  align-content: center;
}

.bindtap{
  opacity: 0.6;
  background: #f7f7f7;
}