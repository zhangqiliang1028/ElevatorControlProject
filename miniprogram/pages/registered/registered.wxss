page,.page {
  height: 100%;
  width: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: rgb(240, 240, 250);
}

.page{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 登录界面 */

.title{
  font-size: 50rpx;
  margin-bottom: 60rpx;
}

.sureBtn{
  margin-left: 40rpx;
  margin-top: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 10rpx;
}

.content{
  height: 60%;
  width: 96%;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  margin-top: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ddd;
  font-size: 35rpx;
  background-color: #fff;
}

.input{
  display: flex;
  flex-direction: row;
  width: 60%;
  height: 80rpx;
  align-items: center;
  justify-content: center;

  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;

  border: 1rpx solid #ddd;
  border-radius: 20prx;
}

.input image{
  width: 35rpx;
  height: 35rpx;
  margin-right:10rpx ;
  margin-left:10rpx ;
}

.otherOp{
  width: 100%;
  height: 50rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.otherOp view{
  width: 33%;
  text-align: center;
}

.gray{
  color: gray;
}

.blue{
  color: #0387FE;
}

.bindtap{
  opacity: 0.6;
  background: #f7f7f7;
}