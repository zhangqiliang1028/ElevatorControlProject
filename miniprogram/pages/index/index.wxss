page,.page {
  height: 100%;
  width: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: rgb(240, 240, 250);
}

.page{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 登录界面 */

/* 标题 */
.tip{
  font-size: 45rpx;
  font-family: auto;
  margin-bottom: 70rpx;
}

.login-sureBtn{
  margin-left: 40rpx;
  margin-top: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 10rpx;
}

.login-content{
  height: 60%;
  width: 96%;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  margin-top: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ddd;
  font-size: 35rpx;
  background-color: #fff;
}

.login-input{
  display: flex;
  flex-direction: row;
  width: 60%;
  height: 80rpx;
  align-items: center;
  justify-content: center;

  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;

  border: 1rpx solid #ddd;
  border-radius: 20prx;
}

.login-input image{
  width: 35rpx;
  height: 35rpx;
  margin-right:10rpx ;
  margin-left:10rpx ;
}

.login-line{
  font-size: 20rpx;
  color: #aaa;
  margin-top: 20rpx;
}

.othrLogin{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

.wechat{
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 50%;  
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.wechat-img{
  width: 100%;
  height: 100%;
  display: inline-table;
}

.login-img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}


/* 搜索页面 */
.portConfig{
  height: 100%;
  width: 100%;
  display: flex;
  white-space: nowrap;
  flex-direction: column;
  background-color: #fff;
}

.item-list{
  width: 100%;
  height: 220rpx;
  margin-bottom: 20rpx;
}

.bg{
  width: 100%;
  height: 20rpx;
  background-color: #edecf2;
}

.icon{
  margin-left: 40rpx;
  width: 50rpx;
  height: 50rpx;
}

.line{
  width: 100%;
  height: 3rpx;
  background-color: #edecf2;
}

.item {
  margin-top: 5rpx;
  padding: 15px 0;
  display: flex;
  flex-direction: row;
}
.item image{
  width: 200rpx;
  height: 200rpx;
}

.blueContent{
  display: flex;
  flex-direction: column;
}

.blueName{
  font-size: large;
  margin-left: 20rpx;
}

.deviceID{
  color: gray;
}

.status{
  color: red;
}


/* 主页页面 */
.content{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.title{
  width: 100%;
  height: 90rpx;

  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #aaa;
  margin-left: 25rpx;
}

.title text{
  margin-left: 20rpx;
}

.icon{
  width: 20rpx;
  height: 60rpx;
  background-color: #0387FE;
  border-radius: 12rpx;
}

.nav{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.row{
  width: 86%;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.nav-left,.nav-right{
  width: 46%;
  height: 150rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: 500;
}

.nav-right{
  margin-left: 8%;
}

.nav-icon{
  width: 70rpx;
  height: 70rpx;
}

.buttom{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #aaa;
  margin-top: 10rpx;
  font-size: 20rpx;
}


.bc-apply{
  background-color: rgb(26, 160, 52);
}

.bc{
  background-color: #999;
}


.bindtap{
  opacity: 0.6;
  background: #f7f7f7;
}