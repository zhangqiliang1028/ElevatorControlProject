page,.page {
  height: 100%;
  width: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: rgb(240, 240, 250);
}

.page{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contents{
  width: 96%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;

  border-radius: 12rpx;
  border: 1rpx solid #cdcd;
  background-color: #fff;
  margin-top: 15rpx;
}


.sureBtn{
  margin-left: 40rpx;
  margin-top: 100rpx;
  margin-right: 40rpx;
  margin-bottom: 100rpx;
}

/* 加减组件 */
.stepper {
  width:105px;
  height:30px;
  border: 1px solid #ccc;
  border-radius: 3px;
    /* 添加输入居中 */
    display: flex;
    align-items: center;
}


/* 图标 */
.row image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 7%;
}
/*普通样式*/
.stepper .normal {
  color:black;
}

/*禁用样式*/
.stepper .disable {
  color: #ccc;
}

/* 输入样式设置 */
.row{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
  align-items: center;

  border-bottom: 1rpx solid #cdcd;
  margin-top: 10rpx;
}

.title{
  margin-left: 30rpx;
  width: 50%;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.fun-about{
  width: 95%;
  margin-top: 10rpx;
  margin-left: 25rpx;
  margin-bottom: 36rpx;
  color: #aaa;
}
.bindtap{
  opacity: 0.6;
  background: #f7f7f7;
}

.tab{
  margin-left: 15%;
  height: 100%;
  width: 70%;
  font-size: 25rpx;
}

